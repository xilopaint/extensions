{
  "compilerOptions": {
    "lib": [
      "ES2022"
    ],
    "module": "commonjs",
    "target": "ES2022",
    "strict": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "src/**/*"
  ]
}