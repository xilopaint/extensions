{
  "name": "basalt-wallpapers",
  "title": "Art Wallpapers. Basalt",
  "description": "Hand-picked art, daily.",
  "icon": "basalt-icon.png",
  "author": "yevgen_glukhov",
  "categories": [
    "Design Tools",
    "Media"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Today's Wallpapers",
      "description": "View and set today's Basalt wallpaper",
