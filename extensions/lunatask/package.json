{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "lunatask",
  "title": "Lunatask",
  "description": "Unofficial extension for Lunatask. Create tasks from Raycast.",
  "icon": "lunatask-icon.png",
  "author": "posthardcode",
  "version": "1.1.0",
  "categories": [
    "Productivity"
  ],
  "platforms": [
    "macOS",
    "Windows"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "new-task",
      "title": "Add New Task",
      "subtitle": "Lunatask",
      "description": "Create a new task in Lunatask",
      "mode": "view"
    },
    {
      "name": "add-area",
      "title": "Add New Area",
      "subtitle": "Lunatask",
      "description": "Configure additional areas in Raycast",
      "mode": "view"
    },
    {
      "name": "list-areas",
      "title": "List Areas",
      "subtitle": "Lunatask",
      "description": "View and delete Lunatask areas",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "accessToken",
      "title": "Access Token",
      "description": "Refer to Lunatask documentation for instructions on how to get your Access Token.",
      "placeholder": "xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx",
      "type": "password",
      "required": true
    },
    {
      "name": "defaultAreaId",
      "title": "Default Area ID",
      "description": "Refer to Lunatask documentation for instructions on how to get an Area ID.",
      "placeholder": "xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx",
      "type": "password",
      "required": true
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.96.0",
    "@raycast/utils": "^1.19.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.11",
    "@types/node": "^22.13.0",
    "@types/react": "^19.0.8",
    "eslint": "^8.57.1",
    "prettier": "^3.4.2",
    "typescript": "^5.7.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
